# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# User Access Control  
ALLOWED_USER_ID=your_telegram_user_id

# LTA Fantasy API Token
X_SESSION_TOKEN=your_lta_fantasy_session_token_here

# Bot Configuration
POLL_SECS=30

# Optional (useful on some VPS/cloud networks):
# If Cloudflare still blocks from your server, you can add your clearance cookie
# CF_CLEARANCE=your_cf_clearance_cookie_value
# If the site sets a session cookie that helps, put it here
# LTAFANTASY_SESSION=your__lolfantasy_session_cookie_value
# Some VPS get stricter treatment over IPv6; force IPv4 if needed
# FORCE_IPV4=true
# Respect HTTPS_PROXY/HTTP_PROXY from environment when set (trust_env=True)

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
